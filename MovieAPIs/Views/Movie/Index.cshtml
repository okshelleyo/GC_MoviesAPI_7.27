@{
    ViewData["Title"] = "Movie Form";
}

@model List<Movie>

<h1>Index</h1>

<table class="table table-bordered">
    <tr>
        <th>Id</th>
        <th>Title</th>
        <th>Genre</th>
        <th>Runtime</th>

    </tr>
    @foreach (var movie in Model)
    {
        <tr>
            <td>@movie.id</td>
            <td>@movie.title</td>
            <td>@movie.genre</td>
            <td>@movie.runtime</td>

            <td><a href="../movie/editmovie?id=@movie.id" class="btn btn-info">Edit @movie.title</a></td>
            <td><a href="../movie/deletemovie?id=@movie.id" class="btn btn-danger">Delete @movie.title</a></td>
        </tr>
    }
</table>

<a href="../movie/MovieForm">Add New Movie</a>